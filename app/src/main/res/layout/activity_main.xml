<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:id="@+id/hidden_main"
    tools:context="gamedevelopers.funcandi.hiddenobject.MainActivity">


    <Button

        android:layout_width="200dp"
        android:layout_height="180dp"
        android:textAlignment="center"
        android:background="@drawable/hiddenobj_mag"
        android:focusable="true"
        android:textStyle="bold"
        android:text="ART   \n ROOM   "
        android:textColor="#808080"
        android:textSize="20dp"
        android:id="@+id/button3"
        android:alpha="0.8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/hiddenobj_mag"
        android:focusable="true"
        android:text="Shop     "
        android:textColor="#808080"
        android:textSize="20dp"
        android:alpha="0.8"

        android:layout_marginStart="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

   <Button

        android:layout_width="200dp"
        android:layout_height="180dp"
        android:textAlignment="center"
        android:background="@drawable/hiddenobj_mag"
        android:focusable="true"
        android:text="Store   \n Room   "
        android:id="@+id/button2"
        android:alpha="0.8"
        android:textColor="#808080"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hidden Objects"
        android:textColor="#ffffff"
        android:textSize="@android:dimen/app_icon_size"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="50dp" />


</RelativeLayout>
